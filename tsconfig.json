{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
